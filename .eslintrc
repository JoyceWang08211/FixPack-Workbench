{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "camelcase": 1,
    "curly": 2,
    "quotes": [
      1,
      "single"
    ],
    "brace-style": [
      2,
      "stroustrup"
    ],
    "semi": [
      1,
      "always"
    ],
    "space-infix-ops": 2
  }
}