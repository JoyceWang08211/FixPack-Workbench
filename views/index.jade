extends layout

block content
    // Navigation
    nav.navbar.navbar-custom.navbar-fixed-top(role='navigation')
        .container
            .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-main-collapse')
                    i.fa.fa-bars
                a.navbar-brand.page-scroll(href='#page-top')
                    i.fa.fa-arrow-up.fa-lg
                    span.light  Go Top
                a.navbar-brand(href='https://github.com/haoliangwu/FixPack-Workbench')
                    i.fa.fa-github.fa-lg
                    span.light  Fork On Github
            // Collect the nav links, forms, and other content for toggling
            .collapse.navbar-collapse.navbar-right.navbar-main-collapse
                ul.nav.navbar-nav
                    // Hidden li included to remove active class from about link when scrolled up past about section
                    li.hidden
                        a(href='#page-top')
                    li
                        a.page-scroll(href='#crawler') Crawler
                    li
                        a.page-scroll(href='#editor') POSHI Editor
                    li
                        a.page-scroll(href='#kb') CNQA KB
            // /.navbar-collapse
        // /.container
    // Intro Header
    header.intro
        .intro-body
            .container
                .row
                    .col-md-8.col-md-offset-2
                        h1.brand-heading FixPack Workbench
                        p.intro-text
                            | For more accuracy and efficiency.
                            br
                            | Created by Lyon Wu.
                        a.btn.btn-circle.page-scroll(href='#crawler')
                            i.fa.fa-angle-double-down.animated
    // About Section
    section#crawler.container.content-section.text-center
        .row
            .col-lg-8.col-lg-offset-2
                h2
                    a(href='/crawler') Crawler
                p
                    | Crawler is the convenient tool for fix pack AA workflow. It can catch all testcases
                    | failed on
                    a(href='https://test.liferay.com/8/')  Jenkins Server
                    |  and then generate the Excel Lists for you.
    // Download Section
    section#editor.content-section.text-center
        .download-section
            .container
                .col-lg-8.col-lg-offset-2
                    h2 Download Grayscale
                    p You can download Grayscale for free on the preview page at Start Bootstrap.
                    a.btn.btn-default.btn-lg(href='http://startbootstrap.com/template-overviews/grayscale/') Visit Download Page
    // Contact Section
    section#kb.container.content-section.text-center
        .row
            .col-lg-8.col-lg-offset-2
                h2 Contact Start Bootstrap
                p
                    | Feel free to email us to provide some feedback on our templates, give us suggestions for new templates and themes, or to just say hello!
                p
                    a(href='mailto:feedback@startbootstrap.com') feedback@startbootstrap.com
                ul.list-inline.banner-social-buttons
                    li
                        a.btn.btn-default.btn-lg(href='https://twitter.com/SBootstrap')
                            i.fa.fa-twitter.fa-fw
                            span.network-name Twitter
                    li
                        a.btn.btn-default.btn-lg(href='https://github.com/IronSummitMedia/startbootstrap')
                            i.fa.fa-github.fa-fw
                            span.network-name Github
                    li
                        a.btn.btn-default.btn-lg(href='https://plus.google.com/+Startbootstrap/posts')
                            i.fa.fa-google-plus.fa-fw
                            span.network-name Google+
    // Footer
    footer
        .container.text-center
            p Copyright Â© github.com/haoliangwu 2015

